              "@from": "00",
              "@to": "00",
              "description": {
                "lang": [
                  {
                    "@xml:lang": "de",
                    "#text": "0 bedeutet Helligkeitsabhängiges Einschalten deaktiviert;  Licht nie einschalten. "
                  },
                  {
                    "@xml:lang": "en",
                    "#text": "0 means turn off illumination detected function And never turn on the light."
                  }
